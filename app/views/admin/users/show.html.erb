<h1>会員詳細</h1>


<%= image_tag @user.get_profile_image %>
<table class="table">
  <tbody>
    <tr>
      <th>ユーザーネーム</th>
      <td><%= @user.name %> </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>生年月日</th>
      <td><%= @user.birth_of_date %></td>
    </tr>
    <tr>
      <th>非公開設定</th>
      <td>
        <% if @user.private_setting == false %>
          公開
        <% else @user.private_setting == true %>
          非公開
        <% end %>
      </td>
    </tr>
    <tr>
      <th>コメント</th>
      <td><%= @user.comment %></td>
    </tr>
    <tr>
      <th>退会ステータス</th>
      <td>
        <% if @user.is_deleted == false %>
          有効
        <% else @user.is_deleted == true %>
          退会
        <% end %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= link_to '編集する', edit_admin_user_path(@user.id) %></td>
    </tr>
  </tbody>
</table>

<h1>会員投稿一覧</h1>

<% @posts.each do |post| %>
<div>
  <%= link_to admin_post_path(post.id) do %>
    <%= image_tag post.get_image %>
  <% end %>
  <p><%= post.title %></p>
  <p>♡<%= post.favorites.count %> いいね</p>
  <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
  <p></p>
</div>
<% end %>

