<div class="col-lg-10 ml-auto">
<h1>ユーザー編集</h1>

<%= form_with model: [:admin, @user], method: :patch do |f| %>

<table class="table">
  <tbody>
    <tr>
      <th><%= f.label :ユーザーアイコン %></th>
      <td><%= f.file_field :profile_image %></td>
    </tr>
    <tr>
      <th><%= f.label :ユーザーネーム %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th><%= f.label :生年月日 %></th>
      <td><%= f.date_field :birth_of_date %></td>
    </tr>
    <tr>
      <th><%= f.label :非公開設定 %></th>
      <td>
        <%= f.radio_button :private_setting , "false" %>
        <%= f.label :公開%>
        <%= f.radio_button :private_setting ,"true" %>
        <%= f.label :非公開%>
      </td>
    </tr>
    <tr>
      <th><%= f.label :コメント %></th>
      <td><%= f.text_area :comment %></td>
    </tr>
    <tr>
      <th><%= f.label :退会ステータス %></th>
      <td>
        <%= f.radio_button :is_deleted , "false" %>
        <%= f.label :有効 %>
        <%= f.radio_button :is_deleted ,"true" %>
        <%= f.label :退会 %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '変更を保存',class: "btn btn-primary" %></td>
    </tr>
  </tbody>
</table>

<% end %>

</div>