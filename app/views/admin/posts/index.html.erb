<h1>投稿一覧</h1>

<table class="table table-borderless">
  <tbody>
    <tr>
      <% @posts.each do |post| %>
      <td>
        <p>
          <%= link_to admin_post_path(post.id) do %>
            <%= image_tag post.get_image %>
          <% end %>
        </p>
        <p>
          <%= link_to admin_user_path(post.user.id) do %>
            <%= image_tag post.user.get_profile_image %> <%= post.user.name %>
          <% end %>
        </p>
        <p>
          <%= link_to admin_post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </p>
        <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
        <p><%= link_to "#{post.post_comments.count} コメント", admin_post_path(post.id) %></p>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>

