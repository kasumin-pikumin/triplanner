<div class="col-lg-8">

<h1>新規投稿</h1>

<% if @user.email == 'guest@example.com' %>
  <p>ユーザーになると投稿ができるようになります！</p>
<% else %>

<%= form_with model: @post, url: posts_path, method: :post do |f| %>
<table class="table table-borderless">
  <tbody>
    <tr>
      <th>プランの選択</th>
      <td><%= f.select :plan_id, options_from_collection_for_select(current_user.plans, :id, :name) %></td>
      <td><%= link_to "プランの作成・編集", plans_path, class: "btn btn-primary" %></td>
    </tr>
    <tr>
      <th><%= f.label :タイトル %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :画像 %></th>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <th><%= f.label :旅行日数 %></th>
      <td><%= f.select :night, *[0..50] %>泊　<%= f.select :day, *[1..50] %>日</td>
    </tr>
    <tr>
      <th><%= f.label :参加人数 %></th>
      <td><%= f.select :person, *[1..100] %>人</td>
    </tr>
    <tr>
      <th><%= f.label :感想等 %></th>
      <td><%= f.text_area :report %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '投稿する' , class: "btn btn-success" %></td>
    </tr>
  </tbody>
</table>
<% end %>
</div>

<% end %>