<h1>新規投稿</h1>

<table class="table">
  <%= form_with model: @post, url: posts_path, method: :post do |f| %>
  <tbody>
    <tr>
      <th><%= f.label :投稿するプラン %></th>
      <td><%= f.select :plan_id, options_from_collection_for_select(Plan.all, :id, :name) %> </td>
      <td><%= link_to "プランを編集する", root_path %></td>
    </tr>
    <tr>
      <th><%= f.label :タイトル %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :画像 %></th>
      <td><%= f.file_field :image, accept: "image/*" ,multiple: true %></td>
    </tr>
    <tr>
      <th><%= f.label :旅行日数 %></th>
      <td><%= f.select :night, *[1..50] %>泊　<%= f.select :day, *[1..50] %>日</td>
    </tr>
    <tr>
      <th><%= f.label :参加人数 %></th>
      <td><%= f.select :person, *[1..100] %>人</td>
    </tr>
    <tr>
      <th><%= f.label :感想等 %></th>
      <td><%= f.text_area :report %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '投稿する' %></td>
    </tr>
  </tbody>
  <% end %>
</table>


